@model List<prog_poe_st10249266.Models.ClaimTBL>

@{
    // Calculate total hours worked and total amount due
    var totalHoursWorked = Model.Sum(claim => claim.hoursWorked);
    var totalAmountDue = Model.Sum(claim => claim.amountDue);
}

<head>
    <style>
        body {
            background-color: #1a1a1a;
            color: #fff;
        }

        table {
            width: 80%;
            padding: 10px;
            border-radius: 20px;
            background-color: #1a1a1a;
            color: #fff;
            border: 3px solid #333;
            margin: auto;
            margin-top: 75px;
            border-collapse: separate;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #333;
            border-right: 1px solid #333;
            color: #fff;
        }

            th:first-child {
                border-top-left-radius: 15px;
            }

            th:last-child {
                border-top-right-radius: 15px;
            }

        tr:last-child td:first-child {
            border-bottom-left-radius: 15px;
        }

        tr:last-child td:last-child {
            border-bottom-right-radius: 15px;
        }

        th {
            background-color: #00bfff;
            color: #1a1a1a;
        }

        tr:nth-child(even) {
            background-color: #333;
        }

        td:last-child, th:last-child {
            border-right: none;
        }
    </style>
</head>
<body style="background-color: #1a1a1a; color: #fff;">
    <h1>Approved Claims</h1>

    <table>
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Document</th>
                <th>Hours Worked</th>
                <th>Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.claimID</td>
                    <td><a href="@claim.fileURL" target="_blank" style="color: #00bfff;">View Document</a></td>
                    <td>@claim.hoursWorked</td>
                    <td>@claim.amountDue</td>
                    <td>@claim.claimStatus</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2"><strong>Total</strong></td>
                <td><strong>@totalHoursWorked</strong></td>
                <td><strong>@totalAmountDue</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</body>
@*~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~EOF~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ *@