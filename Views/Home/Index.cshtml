<head>
    <style>
        body {
            background-color: #1a1a1a;
            color: #fff;
        }

        table {
            width: 80%;
            padding: 10px;
            border-radius: 20px;
            background-color: #1a1a1a;
            color: #fff;
            border: 3px solid #333;
            margin: auto;
            margin-top: 75px;
            border-collapse: separate;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #333;
            border-right: 1px solid #333;
        }

            th:first-child {
                border-top-left-radius: 15px;
            }

            th:last-child {
                border-top-right-radius: 15px;
            }

        tr:last-child td:first-child {
            border-bottom-left-radius: 15px;
        }

        tr:last-child td:last-child {
            border-bottom-right-radius: 15px;
        }

        th {
            background-color: #00bfff;
            color: #1a1a1a;
        }

        tr:nth-child(even) {
            background-color: #333;
        }

        td:last-child, th:last-child {
            border-right: none;
        }
 
.btn {
 width: 6.5em;
 height: 2.3em;
 margin: 0.5em;
 background: #00bfff;
 color: black;
 border: none;
 border-radius: 0.625em;
 font-size: 20px;
 font-weight: bold;
 cursor: pointer;
 position: relative;
 z-index: 1;
 overflow: hidden;
}

button:hover {
 color: black;
}

button:after {
 content: "";
 background: white;
 position: absolute;
 z-index: -1;
 left: -20%;
 right: -20%;
 top: 0;
 bottom: 0;
 transform: skewX(-45deg) scale(0, 1);
 transition: all 0.5s;
}

button:hover:after {
 transform: skewX(-45deg) scale(1, 1);
 -webkit-transition: all 0.5s;
 transition: all 0.5s;
}


    </style>
</head>

<body>
    @{
        var userID = ViewData["userID"];
        
    }
    @if (userID != null)
    {
        <p>User ID: @userID</p>
    }
    @if (ViewData["IsAdmin"] != null && (bool)ViewData["IsAdmin"])
    {
        <p>Welcome, Admin!</p>
    }
    @if(ViewData["IsUser"] != null && (bool)ViewData["IsUser"])
    {
        <p>Welcome, User!</p>
    }
    <h1 class="text-center" style="text-align: center; color: #fff; margin-top: 20px;">View Claims</h1>
 
    <table>
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Hourly Rate</th>
                <th>Hours Worked</th>
                <th>Amount Due</th>
                <th>Claim Status</th>
                <th>Documents</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].claimID</td>
                    <td>@Model[i].hourlyrate</td>
                    <td>@Model[i].hoursWorked</td>
                    <td>@Model[i].amountDue</td>
                    <td>@Model[i].claimStatus</td>
                    <td>
                        @* github copilot helped me with this *@
                        @if (Model[i].fileURL != null)
                        {
                            var fileExtension = System.IO.Path.GetExtension(Model[i].fileURL).ToLower();
                            if (fileExtension == ".jpg" || fileExtension == ".jpeg" || fileExtension == ".png" || fileExtension == ".gif")
                            {
                                <img src="@Model[i].fileURL" alt="File Preview" style="max-width: 100px; max-height: 100px;" />
                            }
                            else
                            {
                                <a href="@Model[i].fileURL" target="_blank">Download File</a>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
