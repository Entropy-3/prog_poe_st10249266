@model List<prog_poe_st10249266.Models.UserTBL>
<head>
    <style>
        body {
            background-color: #1a1a1a;
            color: #fff;
        }

        table {
            width: 80%;
            padding: 10px;
            border-radius: 20px;
            background-color: #1a1a1a;
            color: #fff;
            border: 3px solid #333;
            margin: auto;
            margin-top: 75px;
            border-collapse: separate;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #333;
            border-right: 1px solid #333;
        }

            th:first-child {
                border-top-left-radius: 15px;
            }

            th:last-child {
                border-top-right-radius: 15px;
            }

        tr:last-child td:first-child {
            border-bottom-left-radius: 15px;
        }

        tr:last-child td:last-child {
            border-bottom-right-radius: 15px;
        }

        th {
            background-color: #00bfff;
            color: #1a1a1a;
        }

        tr:nth-child(even) {
            background-color: #333;
        }

        td:last-child, th:last-child {
            border-right: none;
        }
    </style>
</head>
<body style="background-color: #1a1a1a;">
    <h1>Lecturer Details</h1>

    <table>
        <thead>
            <tr>
                <th>User ID</th>
                <th>User Surname</th>
                <th>User Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.Surname</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.UserID" class="btn btn-primary">Edit</a>
                        <a asp-action="ApprovedClaims" asp-route-id="@user.UserID" class="btn btn-secondary">View Approved Claims</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
